# Blockchain Service Environment Variables

# Application
ENV=development
PORT=8003
LOG_LEVEL=INFO

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://voketag:password@postgres:5432/voketag

# Redis
REDIS_URL=redis://:changeme@redis:6379/0

# Celery
CELERY_BROKER_URL=redis://:changeme@redis:6379/0
CELERY_RESULT_BACKEND=redis://:changeme@redis:6379/0

# Blockchain Network
BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BLOCKCHAIN_PRIVATE_KEY=your-private-key-here-KEEP-SECRET
BLOCKCHAIN_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678

# Gas Settings
GAS_PRICE_GWEI=50
MAX_GAS_LIMIT=500000

# Anchoring Settings
MIN_BATCH_SIZE=1
MAX_BATCH_SIZE=100000
ANCHOR_RETRY_ATTEMPTS=5
ANCHOR_RETRY_DELAY_SECONDS=60

# Factory callback auth (X-Anchor-Callback-Key when POSTing to factory)
FACTORY_ANCHOR_CALLBACK_KEY=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8081,https://app.voketag.com
