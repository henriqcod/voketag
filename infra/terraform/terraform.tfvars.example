# Terraform Variables Example
# Copy this file to terraform.tfvars and set your values

# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Database Configuration
db_name     = "voketag"
db_user     = "voketag"
db_password = "CHANGE_ME_SECURE_PASSWORD_123!"  # Use strong password!

# Multi-Region Configuration
secondary_region = "us-east1"

# Domain Configuration
api_domain = "api.voketag.com.br"

# Monitoring Configuration
sre_email = "sre@voketag.com.br"

# IMPORTANT SECURITY NOTES:
# 1. NEVER commit terraform.tfvars to git (it's in .gitignore)
# 2. Use strong passwords (min 16 chars, mixed case, numbers, symbols)
# 3. Rotate db_password regularly (every 90 days)
# 4. Consider using Google Secret Manager for db_password instead
# 5. Review api_domain and sre_email before applying
