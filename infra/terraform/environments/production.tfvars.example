# Production Environment Configuration

project_id = "voketag-prod"
region     = "us-central1"
env        = "production"

# Email for alerts
sre_email = "sre@voketag.com.br"

# PagerDuty (required in production)
pagerduty_service_key = "YOUR_PAGERDUTY_SERVICE_KEY"  # REQUIRED: Set via secret

# Cloud Run Configuration (optimized for production)
scan_service_min_instances     = 2    # Always warm - eliminates cold starts
scan_service_max_instances     = 100  # Headroom for traffic spikes
factory_service_min_instances  = 0    # Can scale to zero (not latency-critical)
factory_service_max_instances  = 20

# Database (production tier)
# Note: db-custom-2-4096 (2 vCPU, 4GB RAM) for production workloads
