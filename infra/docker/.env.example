# Docker Compose Environment Variables
# Copy this file to .env and set secure values

# PostgreSQL Configuration
POSTGRES_DB=voketag
POSTGRES_USER=voketag
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE

# Redis Configuration
REDIS_PASSWORD=changeme

# JWT - Admin emite tokens, Factory valida. OBRIGATÓRIO: mesmo valor nos dois serviços.
JWT_SECRET=change-me-in-production

# Initial admin user (created on first startup if DB empty)
INIT_ADMIN_EMAIL=admin@voketag.com.br
INIT_ADMIN_PASSWORD=admin123

# Anchor callback (Factory ↔ Blockchain) - use callback instead of polling
ANCHOR_CALLBACK_KEY=change-me-secure-random-key

# IMPORTANT: Never commit the .env file to git!
# The .env file should be in .gitignore
