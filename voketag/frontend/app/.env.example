# Scan API (consumidor - verificação de tags)
NEXT_PUBLIC_SCAN_API_URL=http://localhost:8080
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# Admin API (dashboard e usuários) - usado pelas rotas /api/dashboard
# Defina ADMIN_JWT com um token obtido via POST /v1/admin/auth/login para exibir dados no /dashboard
ADMIN_API_URL=http://localhost:8082
ADMIN_JWT=

# Factory API (lotes e produtos) - usado pelas rotas /api/batches e /api/products
# Defina FACTORY_JWT com um token obtido via login do Factory para exibir dados em /batches e /products
FACTORY_API_URL=http://localhost:8081
FACTORY_JWT=

# Opcional: URLs públicas (já usadas em outros pontos do app)
NEXT_PUBLIC_FACTORY_API_URL=http://localhost:8081
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:8082
NEXT_PUBLIC_BLOCKCHAIN_API_URL=http://localhost:8083
NEXT_PUBLIC_ENV=development
